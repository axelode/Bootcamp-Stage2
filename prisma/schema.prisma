generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Tb_user {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  full_name  String
  wallet Tb_wallet[]
  transaction Tb_transaction[]
  category Tb_category[]
}

model Tb_wallet {
  id Int @id @default(autoincrement())
  in_flow Int?
  out_flow Int?
  balance Int
  user Tb_user @relation(fields: [user_id], references: [id])
  user_id Int @unique
}

model Tb_category {
  id Int @id @default(autoincrement())
  category_name String @unique
  type String
  image String
  user Tb_user @relation(fields: [user_id], references: [id])
  user_id Int
  transaction Tb_transaction[]
}

model Tb_transaction {
  id Int @id @default(autoincrement())
  amount Int
  date DateTime
  category_detail Tb_category @relation(fields: [category], references: [category_name])
  category String
  note String
  user Tb_user @relation(fields: [user_id], references: [id])
  user_id Int
  created_at DateTime
}
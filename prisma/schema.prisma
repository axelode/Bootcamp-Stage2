generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Tb_user {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  full_name  String
  image String?
  wallet Tb_wallet[]
  transaction Tb_transaction[]
}

model Tb_wallet {
  id Int @id @default(autoincrement())
  in_flow Int?
  out_flow Int?
  balance Int
  wallet Tb_user @relation(fields: [user_id], references: [id])
  user_id Int @unique
}

model Tb_transaction {
  id Int @id @default(autoincrement())
  amount Int
  date DateTime
  category String
  note String
  transaction Tb_user @relation(fields: [user_id], references: [id])
  user_id Int
  created_at DateTime
}